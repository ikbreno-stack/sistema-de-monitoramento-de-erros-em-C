
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <string.h>

#define LOG_FILE "erros.log"

//fun√ßao para obter data e hora atual formatada 
    void obter_data_hora(char *buffer, size_t tamanho) {
    time_t agora = time(NULL)
    struct tm *tm_info = localtime(&agora);
    strftime(buffer, tamanho, "%Y-%m-%d %H: %M:S", tm_info);





}
